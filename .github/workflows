name: Run Telegram Bot

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:
  # Ye line GitHub ko batati hai ki har 5:30 ghante baad khud start ho jao
  schedule:
    - cron: '30 */5 * * *'

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3

    - name: Set up Python 3.9
      uses: actions/setup-python@v3
      with:
        python-version: "3.9"

    - name: Install Libraries
      run: |
        python -m pip install --upgrade pip
        pip install requests

    - name: Run Bot
      # Ye timeout purane bot ko 330 minute (5.5 hours) baad band kar dega
      # Taaki naya wala start ho sake
      timeout-minutes: 330
      env:
        BOT_TOKEN: ${{ secrets.BOT_TOKEN }}
      run: |
        python index.py
